@using EveryDayBlog.Web.Areas.Administration.ViewModels.Posts.ViewModels;
@model List<HiddenPostViewModel>

<div class="container mobile-fondsize-11 shadow p-4 mb-4 bg-white">
    <div class="mobile-fondsize-20 h3 text-muted text-center pb-2">Hidden Posts</div>
    <table class="table table-hover">
        <thead>
            <tr class="row d-flex justify-content-around">
                <th scope="col" class="col-2 d-flex justify-content-center"></th>
                <th scope="col" class="col-4 d-flex justify-content-center">Title</th>
                <th scope="col" class="col-5 d-flex justify-content-center">Sub Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in @Model)
            {
                <tr class="row d-flex justify-content-around">
                    <td class="col-2 d-flex justify-content-center">
                        <img src="@post.PageHeader?.Image?.CloudUrl" width="100" height="100">
                    </td>
                    <td class="col-4 d-flex justify-content-center">
                        @post.PageHeader?.Title
                    </td>
                    <td class="col-5 d-flex justify-content-center">
                        @post.PageHeader?.SubTitle
                    </td>
                    <td class="col-md-6 d-flex justify-content-around">
                        <a asp-area="Administration" asp-controller="Posts" asp-action="Reorganize" asp-route-id="@post.Id" class='btn btn-group-sm btn-outline-success'>
                            <i class="fas fa-hammer" ></i>Make visible
                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>