@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<partial name="~/Views/Shared/Partials/_HeaderDescPartial.cshtml" model="@Model.PageHeader" />


<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <h4>Reset your password.</h4>
            <form method="post" name="sentMessage" id="contactForm" novalidate>
                <input asp-for="Input.Code" type="hidden" />
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" id="sendMessageButton">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>