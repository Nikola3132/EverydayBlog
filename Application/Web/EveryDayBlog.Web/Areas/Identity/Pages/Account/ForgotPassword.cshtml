@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>You've forgotten your password? Fill out the form below with your email and we'll send you an email with instructions!</p>
            <form method="post" name="sentMessage" id="contactForm" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Input.Email">Email Address</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Email Address" id="email">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" id="sendMessageButton">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>