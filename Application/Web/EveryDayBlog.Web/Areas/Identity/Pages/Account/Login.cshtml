@page
@model LoginModel
@{
    this.ViewData["Title"] = "Login";
}

<partial name="~/Views/Shared/Partials/_HeaderDescPartial.cshtml" model="@Model.PageHeader" />

<div class="login-form">

    <h2 class="text-center">Login</h2>
    <div class="text-center social-btn">
        <partial name="_ExternalLoginPartial">
    </div>
    <div class="or-seperator"><i>or</i></div>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <input asp-for="Input.Email" class="form-control" placeholder="Email" required="required">
        </div>

        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
            <input asp-for="Input.Password" class="form-control" placeholder="Password" required="required">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block login-btn">Login</button>
        </div>
        <div class="clearfix">
            <label asp-for="Input.RememberMe" class="pull-left checkbox-inline">
                <input asp-for="Input.RememberMe" type="checkbox" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
            <a id="forgot-password" asp-page="./ForgotPassword" class="pull-left text-success"><span id="formFooter">Forgot Password?</span></a>
        </div>
    </form>
    <div class="hint-text small">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-success">Register Now!</a></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}











