<!--Post files-->
<link rel="stylesheet" type="text/css" href="~/vendorPost/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/vendorPost/animate/animate.css">
<link rel="stylesheet" type="text/css" href="~/vendorPost/css-hamburgers/hamburgers.min.css">
<link rel="stylesheet" type="text/css" href="~/vendorPost/select2/select2.min.css">
<link rel="stylesheet" type="text/css" href="~/css/util.css">
<link rel="stylesheet" type="text/css" href="~/css/main.css">

@{
    this.ViewData["Title"] = "Create Post";
}

<header class="masthead" style="background-image: url('../../wwwroot/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Ask your question here</h1>
                    <span class="subheading">Don't worry to ask. Everyone who is interested will answer</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="contact1">
    <div class="container-contact1">
        <div class="contact1-pic js-tilt" data-tilt>
            <img src="~/img/blog-icon.png" alt="IMG">
        </div>

        <form class="contact1-form validate-form">
            <span class="contact1-form-title">
                Feel free to ask or narrate!
            </span>

            <div class="wrap-input1 validate-input" data-validate="Title is required">
                <input class="input1" type="text" name="MainTitle" placeholder="Main title...">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Sub title is required">
                <input class="input1" type="text" name="SubTitle" placeholder="Sub title...">
                <span class="shadow-input1"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Add at least one section">
                <a href="#" class="btn btn-link" data-toggle="modal" data-target="#myModal">Add a section</a>
            </div>

            <div class="modal fade" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h3 class="modal-title">Create your section</h3>
                            <a href="#" class="close" data-dismiss="modal">&#10006;</a>
                        </div>
                        <div class="modal-body">
                            <form id="myForm">
                                <div class="wrap-input1 validate-input" data-validate="Section's title is required">
                                    <input class="input1" type="text" name="SectionTitle" placeholder="Section's title">
                                    <span class="shadow-input1"></span>
                                </div>

                                <div class="wrap-input1 validate-input" data-validate="Content is required">
                                    <textarea class="input1" name="Content" placeholder="Start your content with 'What','Why','How' and etc, if only you are asking a question!...Otherwise we wouldn't recognize it as question."></textarea>
                                    <span class="shadow-input1"></span>
                                </div>
                            </form>
                            
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn btn-outline-dark">Cancel</a>
                            <input type="reset" value="Submit" class="btn btn-success" id="btnSubmit">

                        </div>
                    </div>
                </div>


            </div>
            <!--Creating sections with pop up-->
            <!--TODO IMAGE-->


            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn">
                    <span>
                        Send
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    $('.js-tilt').tilt({
        scale: 1.1
    })
</script>

<script>

    document.ready(function () {
        $("btnSubmit").click(function () {
            var myFormData = $("#myForm").serialize();


            $.ajax({
                type: "POST",
                url:"/Posts/Create",
                data: myFormData,
                success: function () {
                    $("#myModal").modal("hide")
                }
            })
        })
    })
</script>