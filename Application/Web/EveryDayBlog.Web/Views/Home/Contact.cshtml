@using EveryDayBlog.Web.ViewModels.UsersRequests.InputModels;
@model UserRequestInputModel

@*@{
    this.ViewData["Title"] = "Contact";
}*@

<partial name="~/Views/Shared/Partials/_HeaderDescPartial.cshtml" model="@Model?.PageHeader" />

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
            <form asp-controller="Home" asp-action="Contact" method="post">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Name">Name</label>

                        @if (Model?.Name != null && this.User.Identity.IsAuthenticated)
                        {
                            <input type="text" class="form-control" asp-for="Name" disabled>
                        }
                        else
                        {
                            <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                            <span asp-validation-for="Name"></span>
                        }
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Email">Email Address</label>
                        @if (Model?.Email != null  && this.User.Identity.IsAuthenticated)
                        {
                            <input class="form-control" asp-for="Email" disabled>
                        }
                        else
                        {
                            <input class="form-control" asp-for="Email" placeholder="Email Address">
                            <span asp-validation-for="Email"></span>

                        }
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label asp-for="Phone">Phone Number</label>
                        <input class="form-control" placeholder="Phone Number" asp-for="Phone">
                        <span asp-validation-for="Phone"></span>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Message">Message</label>
                        <textarea rows="5" class="form-control" placeholder="Message" asp-for="Message"></textarea>
                        <span asp-validation-for="Message"></span>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>